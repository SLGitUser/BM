@using Bm.Modules.Html
@model IList<Bm.Models.Dp.Developer>

@section Header{
    <script src="~/Content/JavaScript/Js_Tools.js"></script>
}

@section PageHead {
    <h1>
        开发商信息
        <small>（页面编号：0521）</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
        <li class="active">开发商信息</li>
    </ol>
}

<style>
    .c1 {
        width: 20px;
    }

    .ca {
        width: 160px;
    }
</style>
@using (Html.BeginForm("Delete", "Developer", FormMethod.Get))
{

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="btn-group">
                    <a class="btn btn-default" href="@Url.Action("Create")"><i class="fa fa-plus"></i> 新增</a>
                    <button type="submit" class="btn btn-default" onclick='$("form").attr("action", "/Biz/Developer/Delete");'><i class="fa fa-minus"></i> 删除</button>

                    <button type="submit" class="btn btn-default" onclick='$("form").attr("action", "/Biz/Developer/Details");'><i class="fa fa-eye"></i> 查看</button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_length" id="example1_length">
                                <label>显示 <select name="example1_length" aria-controls="example1" class="form-control input-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> 条</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="example1_filter" class="dataTables_filter">
                                <label>检索:<input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.Raw(Model.ToHtmlTable()
                                .Table(new HtmlElement("table")
                                    .Attr("id", "example1")
                                    .Attr("class", "table table-bordered table-striped dataTable")
                                    .Attr("role", "grid")
                                    .Attr("aria-describedby", "example1_info"))
                                .AddCheckBox(m => m.Id, styleFunc: m => "c1")
                                .Add(m => m.No)
                                .Add(m => m.Name)
                                .AddAction(m => m.Id, m => $"<a class=\"\" href=\"{Url.Action("Edit", new { m.Id })}\"> <i class=\"fa fa-pencil-square-o\"></i> 修改</a>", m => "ca")
                                .ToString())
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                <ul class="pagination"><li class="paginate_button previous disabled" id="example1_previous"><a href="#" aria-controls="example1" data-dt-idx="0" tabindex="0">Previous</a></li><li class="paginate_button active"><a href="#" aria-controls="example1" data-dt-idx="1" tabindex="0">1</a></li><li class="paginate_button "><a href="#" aria-controls="example1" data-dt-idx="2" tabindex="0">2</a></li><li class="paginate_button "><a href="#" aria-controls="example1" data-dt-idx="3" tabindex="0">3</a></li><li class="paginate_button "><a href="#" aria-controls="example1" data-dt-idx="4" tabindex="0">4</a></li><li class="paginate_button "><a href="#" aria-controls="example1" data-dt-idx="5" tabindex="0">5</a></li><li class="paginate_button "><a href="#" aria-controls="example1" data-dt-idx="6" tabindex="0">6</a></li><li class="paginate_button next" id="example1_next"><a href="#" aria-controls="example1" data-dt-idx="7" tabindex="0">Next</a></li></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </section>
}

<!-- DataTables -->
<script src="http://123.56.185.114:8000/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="http://123.56.185.114:8000/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="http://123.56.185.114:8000/plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="http://123.56.185.114:8000/plugins/fastclick/fastclick.js"></script>
<script>
    $(function () {
        //$("#example1").DataTable();
        $('#example1').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>