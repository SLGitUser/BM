@model Bm.Models.Base.Account
@section Header{
}

@section PageHead {
    <h1>账户信息<small></small></h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="@Url.Action("Index")"><i class="fa fa-book"></i>账户</a></li>
        <li class="active">修改账户信息</li>
    </ol>
}
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">修改账户信息</h3>
        </div>
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new Dictionary<string, object> { { "class", "form-horizontal" } }))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.CreatedAt)
            @Html.HiddenFor(m => m.CreatedBy)

            <div class="box-body">
                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="No" class="col-sm-2 control-label">账户名</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="No" name="No" value="@Model.No" placeholder="账户名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.No)</label>
                    </div>
                </div>

                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="Name" class="col-sm-2 control-label">姓名</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="姓名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.Name)</label>
                    </div>
                </div>

                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="Name" class="col-sm-2 control-label">密码</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="姓名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.Name)</label>
                    </div>
                </div>

                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="Name" class="col-sm-2 control-label">电子邮件</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="姓名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.Name)</label>
                    </div>
                </div>

                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="Name" class="col-sm-2 control-label">手机</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="姓名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.Name)</label>
                    </div>
                </div>

                <div class="form-group col-sm-12 col-lg-4 col-md-6">
                    <label for="Name" class="col-sm-2 control-label">备注</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Remark" name="Remark" value="@Model.Remark" placeholder="姓名">
                        <label for="No" class="control-label">@Html.ValidationMessageFor(m => m.Remark)</label>
                    </div>
                </div>


            </div>
              <!-- /.box-body -->
            <div class="box-footer" style="text-align: right;">
                <button type="submit" class="btn bg-blue btn-flat margin">确认提交</button>
                <a href="@Url.Action("Index")" class="btn bg-blue btn-flat margin"><i class="fa fa-mail-reply"></i>返回列表</a>
            </div>
        }
    </div>
</section>
