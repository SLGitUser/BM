
<header class="bar bar-nav">
    <h1 class="title">注册</h1>
</header>
<div class="content">
    <div class="list-block">
        <ul>
            <!-- Text inputs -->
            <li>
                <div class="item-content">
                    <div class="item-media">
                        <i class="icon icon-form-name"></i>
                    </div>
                    <div class="item-inner">
                        <div class="item-input">
                            <input type="tel" name="phoneNo" id="phoneNo" placeholder="手机号码" />
                            @*onchange="document.getElementById('t').href = '@Url.Action("Code", "Register", new {Area = "Base"})?phoneNo=' + this.value "/>*@
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="content-block">
        <div class="row">
            <div class="col-100">
                <a id="t" href="#" class="button button-big button-fill button-success">获取动态验证码</a>
            </div>
        </div>
    </div>
    <div class="content-padded grid-demo">
        <div class="row">
            <div class="col-50">
                <a href="@Url.Action("Login", "Session", new {Area = "Base"})">登录</a>
            </div>
            <div class="col-50">
                <a href="@Url.Action("Index", "ForgotPass", new {Area = "Base"})">忘记密码</a>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    
<script>
    $("#t").on('tap', function (e) {
        alert(e.target.href);
        e.target.href = '@Url.Action("Code", "Register", new {Area = "Base"})' + '?phoneNo=' + $("#phoneNo").val();
        alert(e.target.href);
        return true;
    });
</script>
}