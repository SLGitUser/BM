@model Bm.Models.Dp.Developer

@section Header{
}

@section PageHead {
    <h1>开发商信息<small></small></h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="@Url.Action("Index")"><i class="fa fa-book"></i>开发商</a></li>
        <li class="active">新增开发商信息</li>
    </ol>
}

<script src="~/Content/JavaScript/Js_Tools.js"></script>
<!-- Main content -->
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">新增开发商信息</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" action="@Url.Action("Create")" method="POST">
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-sm-12 col-lg-4 col-md-6">
                        <label for="No" class="col-sm-3 control-label">编号</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="No" name="No" placeholder="编号必须唯一">
                            <p class="help-block">@Html.ValidationMessageFor(m => m.No)</p>
                        </div>
                    </div>
                    <div class="form-group col-sm-12 col-lg-4 col-md-6">
                        <label for="Name" class="col-sm-3 control-label">名称</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="名称">
                            <p class="help-block">@Html.ValidationMessageFor(m => m.Name)</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn bg-blue btn-flat margin">确认提交</button>
                <a href="@Url.Action("Index")" class="btn btn-default btn-flat margin"><i class="fa fa-mail-reply"></i> 返回列表</a>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</section>